apply plugin: 'com.android.application'

import com.android.build.OutputFile
ext.versionCodes = ['armeabi-v7a':1, 'arm64-v8a':2, 'mips':3, 'x86':4, 'x86_64':5]

android {
	namespace 'org.darkdimension.avdl'
	compileSdkVersion 33
	ndkVersion '25.1.8937393'

	defaultConfig {
		applicationId '%AVDL_PACKAGE_NAME%'
		minSdkVersion 19
		targetSdkVersion 33
		versionCode  %AVDL_VERSION_CODE%
		versionName  "%AVDL_VERSION_NAME%"
	}
	buildTypes {
		release {
			minifyEnabled true
			proguardFiles getDefaultProguardFile('proguard-android-optimize.txt'),
						  'proguard-rules.pro'
		}
	}
	externalNativeBuild {
		cmake {
			version '3.22.1'
			path 'src/main/cpp/CMakeLists.txt'
		}
	}
	splits {
		abi {
			enable true
			reset()
			include 'armeabi-v7a', 'arm64-v8a', 'x86', 'x86_64'
			universalApk true
		}
	}

	applicationVariants.all { variant ->
		// assign different version code for each output
		variant.outputs.each { output ->
			output.versionCodeOverride = defaultConfig.versionCode
		}
	}
	allprojects {
	    tasks.withType(JavaCompile) {
	        options.compilerArgs << "-Xlint:unchecked" << "-Xlint:deprecation"
	    }
	}
}
